<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="abp1.PermisosPage"
             Title="Permisos de la Aplicación">

    <StackLayout Padding="20" Spacing="20">
        <Label Text="Permisos requeridos"
               FontSize="24"
               HorizontalOptions="Center" />

        <Frame BorderColor="Gray" CornerRadius="10" Padding="15">
            <StackLayout>
                <Label Text="📸 Cámara" FontSize="18" />
                <Label Text="Permite tomar fotos desde la aplicación." FontSize="14" TextColor="Gray"/>
            </StackLayout>
        </Frame>

        <Frame BorderColor="Gray" CornerRadius="10" Padding="15">
            <StackLayout>
                <Label Text="🖼️ Galería" FontSize="18" />
                <Label Text="Permite seleccionar imágenes para los eventos." FontSize="14" TextColor="Gray"/>
            </StackLayout>
        </Frame>

        <Frame BorderColor="Gray" CornerRadius="10" Padding="15">
            <StackLayout>
                <Label Text="📞 Teléfono" FontSize="18" />
                <Label Text="Permite hacer llamadas directamente desde la app." FontSize="14" TextColor="Gray"/>
            </StackLayout>
        </Frame>

        <Button Text="Aceptar" BackgroundColor="#2196F3" TextColor="White" Clicked="OnAceptarClicked" />
    </StackLayout>
</ContentPage>
