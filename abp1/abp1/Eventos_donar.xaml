<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="abp1.Eventos_donar"
             BackgroundColor="#dbe5f6"
             Title="Eventos donde puedes donar">

    <ScrollView>
        <StackLayout Padding="20">


            <Frame BackgroundColor="#A9C9FF" CornerRadius="20" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Contenido de la tarjeta -->
                    <StackLayout Grid.Column="0" Spacing="10">
                        <Image Source="Donacion.jpg" Aspect="AspectFill" HeightRequest="150"/>
                        <Label Text="Donación de alimentos"
                      FontAttributes="Bold"
                       FontSize="16"
                        TextColor="Black"/>
                        <Label Text="El propósito del evento es brindar alimentos de forma voluntaria."
                       FontSize="12"
                       TextColor="Black"/>
                        <Button Text="donar"
                        BackgroundColor="LimeGreen"
                        TextColor="White"
                        CornerRadius="10"
                        Margin="0,10,0,0"
                         Clicked="OnDonarClicked"/>
                    </StackLayout>

                    <!-- Íconos al lado derecho, en vertical -->
                    <Frame Grid.Column="1"
                     BackgroundColor="#A9C9FF"
                     CornerRadius="15"
                     Padding="5"
                     Margin="5,0,0,0"
                     VerticalOptions="Center">
                        <StackLayout Spacing="15">
                            <Label Text="♡" FontSize="24" HorizontalTextAlignment="Center"/>
                            <Label Text="🗨️" FontSize="24" HorizontalTextAlignment="Center"/>
                            <Label Text="❓" FontSize="24" HorizontalTextAlignment="Center"/>
                        </StackLayout>
                    </Frame>
                    <!-- Contenido de la tarjeta -->
                    <StackLayout Grid.Column="0" Spacing="10">
                        <Image Source="Donacion.jpg" Aspect="AspectFill" HeightRequest="150"/>
                        <Label Text="Donación de alimentos"
          FontAttributes="Bold"
           FontSize="16"
            TextColor="Black"/>
                        <Label Text="El propósito del evento es brindar alimentos de forma voluntaria."
           FontSize="12"
           TextColor="Black"/>
                        <Button Text="donar"
            BackgroundColor="LimeGreen"
            TextColor="White"
            CornerRadius="10"
            Margin="0,10,0,0"
             Clicked="OnDonarClicked"/>
                    </StackLayout>

                    <!-- Íconos al lado derecho, en vertical -->
                    <Frame Grid.Column="1"
         BackgroundColor="#A9C9FF"
         CornerRadius="15"
         Padding="5"
         Margin="5,0,0,0"
         VerticalOptions="Center">
                        <StackLayout Spacing="15">
                            <Label Text="♡" FontSize="24" HorizontalTextAlignment="Center"/>
                            <Label Text="🗨️" FontSize="24" HorizontalTextAlignment="Center"/>
                            <Label Text="❓" FontSize="24" HorizontalTextAlignment="Center"/>
                        </StackLayout>
                    </Frame>
                </Grid>

            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
